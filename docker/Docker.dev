FROM ruby:2.7.2-alpine

RUN apk add --no-cache \
    bash \
    build-base \
    git \
    icu-dev \
    imagemagick \
    openjdk8-jre \
    nodejs \
    npm \
    postgresql-dev \
    sqlite \
    sqlite-dev \
    tzdata

WORKDIR /usr/src/app

COPY Gemfile Gemfile.lock ./
RUN bundle install
VOLUME /usr/src/app

ENTRYPOINT ["ash", "docker/scripts/dev-entrypoint.sh"]
CMD ["docker/scripts/dev-make-and-serve.sh"]
