<% provide(:title, "Connect assignments") %>
<div class="container resource-modification">
  <h1><%= yield :title %></h1>
  <p>
  Choose assignments to associate with
  <%= link_to @vertical.name, get_vertical_path(@vertical) %>.
  </p>

  <a href="<%= get_vertical_path(@vertical) %>"
    ><button class="btn btn-md btn-default">Done</button
  ></a>
  
  <div class="row">
    <div class="col-md-12 col-md-offset-0">
      <% if @assignments.empty? %>
        <% if @vertical.class == Assignment %>
          No other assignments exist yet!
        <% else %>
          No assignments exist yet!
        <% end %>
      <% else %>
        <h2>Assignments</h2>
        <div class="connection-index">

          <%= render partial: 'assignment_group_index_item', 
            collection: AssignmentGroup.all, as: :assignment_group %>

          <%# render partial: 'assignment_index_item', 
             collection: @assignments, as: :assignment %>

        </div>
      <% end %> 
    </div>
  </div>
  
  <a href="<%= get_vertical_path(@vertical) %>"
    ><button class="btn btn-md btn-default">Done</button
  ></a>
  
</div>
