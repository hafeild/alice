
<div class="assignment index-entry">
  <a href="#<%= assignment.id %>" 
  data-assignment-id="<%= assignment.id %>"><span class="name"><%= assignment.name %></span></a>


  <span class="metadata">
    <span class="course"><%= assignment.full_title %></span>
    (<span class="instructor"><%= oxford_comma_list assignment.instructors.map{|i| i.last_name} %></span>,
    <span class="date"><%= assignment.semester %></span>)
  </span>


  <span class="summary"><%= assignment.summary %></span>

  <span class="metadata">
    <span class="added-by">Added on <%= assignment.created_at.strftime('%B %d, %Y') %> by <%= assignment.creator.username %></span> 
    &mdash;
    <span class="learning_curve">Learning curve: <i><%= (assignment.learning_curve.nil? or assignment.learning_curve == "") ? "unknown" : assignment.learning_curve %></i></span>
    <% if false %>
    <span class="years">Taught <%= assignment.assignment_results.size %> <%= 'time'.pluralize(assignment.assignment_results.size) %></span><br/>
    <% end %>
    <% if assignment.tags.size > 0 %>
    &mdash;
    <span class="tags"><%= render(partial: "tags/tag_badge", 
    collection: sort_by(assignment.tags, :text), as: :tag) %></span>
    <% end %>
  </span>
</div>