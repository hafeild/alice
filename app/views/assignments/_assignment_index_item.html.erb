<div data-assignment-id="<%= assignment.id %>" class="assignment index-entry">

  <div class="connect-resource">
    <%= form_for(assignment, 
        url: vertical_vertical_path(@vertical, assignment), 
        method: :post, html: {style: 'display: inline'}) do |f| %>
      <% if @vertical.assignments_related_to.exists?(assignment.id) %>
        <button class="btn btn-sm btn-default" disabled="disabled">Already added</button>
      <% else %>
        <button class="btn btn-sm btn-default">Add</button>
      <% end %>
    <% end %>
  </div>

  <span class="entry-data-wrapper">
    <span class="name"><%= assignment.name %></span>
    <span class="snippet"><%= assignment.summary %></span>
  </span>
</div>