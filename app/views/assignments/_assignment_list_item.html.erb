<%#
Parameters:
  - assignment (current assignment)
  - assignment_group
  - target_assignment_id (id of the assignment to highlight; "" if none)

%>
<li class="resource vertical-li assignment-list-item <%= "selected" if assignment.id == target_assignment_id %>">

  <% if false %>
          <% if can_edit? %>
            <span class="edit-toggle">
            <%= form_for(assignment, method: :get,
                url: edit_assignment_path(assignment),
                html: {class: "inline"}) do |f| %>
                <button type="submit" class="btn btn-link btn-sm" data-toggle="tooltip" title="Edit">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
              <% end %>
              <%= form_for(assignment, method: :delete,
                  url: assignment_path(assignment), 
                  html: {class: "inline"}) do |f| %>
                <button type="submit" class="btn btn-link btn-sm" data-toggle="tooltip" title="Delete">
                  <span class="glyphicon glyphicon-remove x-btn" aria-hidden="true"></span> 
                </button>
              <% end %>
            </span>
          <% end %>
  <% end %>
  
  <% if assignment.id == target_assignment_id %>
    <span class="name"><%= assignment.full_title %> 
      (<%= oxford_comma_list assignment.instructors.map{|i| i.last_name} %>,
      <%= assignment.semester %>)</span>
  <% else %>
    <a href="#<%=assignment.id %>">
      <span class="name"><%= assignment.full_title %> 
        <%# Gives us a list of instructors like this:
          Single instructor:         Jones
          Two instructors:           Smith & Jones
          Three or more instructors: Jahn, Mutton, & Smith
        %>
        (<%= oxford_comma_list assignment.instructors.map{|i| i.last_name} %>,
        <%= assignment.semester %>)</span>
    </a>
  <% end %>
</li>