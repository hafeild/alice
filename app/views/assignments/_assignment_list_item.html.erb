<div class="resource vertical-li">

  <% if can_edit? %>
    <span class="edit-toggle">
	  <%= form_for(assignment, method: :get,
        url: edit_assignment_path(assignment),
        html: {class: "inline"}) do |f| %>
        <button type="submit" class="btn btn-link btn-sm" data-toggle="tooltip" title="Edit">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button>
      <% end %>
      <%= form_for(assignment, method: :delete,
          url: assignment_path(assignment), 
          html: {class: "inline"}) do |f| %>
        <button type="submit" class="btn btn-link btn-sm" data-toggle="tooltip" title="Delete">
          <span class="glyphicon glyphicon-remove x-btn" aria-hidden="true"></span> 
        </button>
      <% end %>
    </span>
  <% end %>
  
  <span class="name"><%= assignment.course_title %> 
  <%# Quite ugly, but this gives us a list of instructors like this:
    Single instructor:         Jones
    Two instructors:           Smith & Jones
    Three or more instructors: Jahn, Mutton, & Smith
  %>
  (<% if assignment.instructors.size == 1 %><%= assignment.instructors.first.last_name %><% else %><%= assignment.instructors[0...-1].map{|i| i.last_name}.join(", ")%><%= "," if assignment.instructors.size > 2 %> &amp; <%= assignment.instructors.last.last_name %>&mdash;<%= assignment.semester %><% end %>)</span>

  (<%= link_to "details", assignment_path(assignment) %>)

</li>