
<% if print_header %>
  <h3><span class="name"><%= web_resource.description %></span>

    <% if can_edit? and defined? vertical %>
      <%= form_for(web_resource, method: :delete,
          url: vertical_web_resource_path(vertical, web_resource), 
          html: {class: "inline"}) do |f| %>
        <button type="submit" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 
          Disassociate</button>
      <% end %>
      <%= form_for(web_resource, method: :get,
         url: edit_vertical_web_resource_path(vertical, web_resource),
         html: {class: "inline"}) do |f| %>
        <button type="submit" class="btn btn-default btn-sm">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
      </button>
      <% end %>
    <% end %>
  </h3>
<% end %>


<h4>URL</h4>
<p>
  <%= link_to web_resource.url, web_resource.url %>
</p>

<a href="/search/all?advanced=true&any=true&wrq=<%=u web_resource.url %>"
><button class="btn btn-default btn-md">
  Search for
  <%= web_resource.url %>
</button></a>

<%= render(partial: "verticals_shared/related_vertical",
  locals: {title: "Assignments", vertical_from: web_resource, 
           vertical_to: Assignment.new}) %>

<%= render(partial: "verticals_shared/related_vertical",
  locals: {title: "Analyses", vertical_from: web_resource, 
           vertical_to: Analysis.new}) %>

<%= render(partial: "verticals_shared/related_vertical",
  locals: {title: "Software", vertical_from: web_resource, 
           vertical_to: Software.new}) %>

<%= render(partial: "verticals_shared/related_vertical",
  locals: {title: "Datasets", vertical_from: web_resource, 
           vertical_to: Dataset.new}) %>