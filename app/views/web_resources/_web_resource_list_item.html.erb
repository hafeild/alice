<li class="resource vertical-li">
<% if can_edit? and defined? vertical %>
    <span class="edit-toggle">
	<%= form_for(web_resource, method: :get,
        url: edit_vertical_web_resource_path(vertical, web_resource),
        html: {class: "inline"}) do |f| %>
        <button type="submit" class="btn btn-link btn-sm" data-toggle="tooltip" title="Edit">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button>
      <% end %>
      <%= form_for(web_resource, method: :delete,
          url: vertical_web_resource_path(vertical, web_resource), 
          html: {class: "inline"}) do |f| %>
        <button type="submit" class="btn btn-link btn-sm" data-toggle="tooltip" title="Disassociate">
          <span class="glyphicon glyphicon-remove x-btn" aria-hidden="true"></span> 
        </button>
    <% end %>
      
    </span>
  <% end %>
  <span class="name"><%= link_to web_resource.description, web_resource.url %></span>

  (<%= link_to "details", web_resource_path(web_resource) %>)

  
</li>