<% provide(:title, "Connect datasets") %>
<div class="container resource-modification">
  <h1><%= yield :title %></h1>
  <p>
  Choose datasets to associate with
  <%= link_to @vertical.name, get_vertical_path(@vertical) %>.
  </p>
  
  <a href="<%= get_vertical_path(@vertical) %>"
    ><button class="btn btn-md btn-default">Done</button
  ></a>

  <div class="row">
    <div class="col-md-12 col-md-offset-0">
      <% if @datasets.empty? %>
        <% if @vertical.class == Dataset %>
          No other datasets exist yet!
        <% else %>
          No datasets exist yet!
        <% end %>
      <% else %>
        <h2>Datasets</h2>
        <div class="connection-index">
          <%= render partial: 'dataset_index_item', 
            collection: @datasets, as: :dataset %>
        </div>
      <% end %> 
    </div>
  </div>
  
  <a href="<%= get_vertical_path(@vertical) %>"
    ><button class="btn btn-md btn-default">Done</button
  ></a>
  
</div>
