<% provide(:title, "Assignments") %>
<div class="container vertical-index assignment_group-index">
  <div class="row">

    <h1>Assignments
    <% if can_edit? %>
      <%= link_to(new_assignment_group_path) do 
        %>
      <button class="btn btn-sm btn-link" data-toggle="tooltip" title="New Assignment Group">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
      <% end %>
    <% end %>
    </h1>
    <div class="col-med-12">
      <div id="assignment-group-entries" class="entries">
        <% 
        @i = 0 
        @total = @assignment_groups.size
        
        %>
        <%= render @assignment_groups.sort{|x,y| y.created_at <=> x.created_at} %>
      </div>
    </div>

  </div>
</div>
