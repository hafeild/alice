<% provide(:title, @assignment_group.name) %>
<div class="container-fluid assignment-page" data-assignment_group-id="<%= @assignment_group.id %>">
  
  <h1 class="name"><span class="name-text"><%= @assignment_group.name %></span>
  <% if can_edit? %>
  <button type="button" class="btn btn-primary btn-sm edit-toggle enable-editing">
    Enable editing
  </button>
  <button type="button" class="btn btn-primary btn-sm edit-toggle disable-editing">
    Disable editing
  </button>

  <span class="edit-toggle">
    <%= link_to edit_assignment_group_path(@assignment_group.id)  do  
    %><button type="button" class="btn btn-link btn-sm" data-toggle="tooltip" title="Edit Assignment">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </button
    ><% end %>
    <%= link_to @assignment_group, method: :delete, data: {
      confirm: "Are you sure you want to delete this page?"} do  
    %><button type="button" class="btn btn-link btn-sm x-btn" data-toggle="tooltip" title="Delete Assignment">
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 
    </button
    ><% end %>
  </span>
  <% end %>
  </h1>
  <div class="tags">
    <% if can_edit? %>
    <span class="edit-toggle">
      <a href="<%= vertical_tag_index_path @assignment_group %>">
      <button class="btn btn-sm btn-link" data-toggle="tooltip" title="Add Tags">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      </button>
      </a>
       <!-- got merged into ^^
       <%-# new_vertical_tag_path @assignment -%>
       -->
    </span>
    <% end %>
    Tags:
    <%= render(partial: "tags/tag_badge", 
    collection: sort_by(@assignment_group.tags, :text), as: :tag,
    locals: {print_header: true, vertical: @assignment_group}) || 
    "There are currently no tags associated with this assignment group." %>
  </div>

  <div class="row"> <%# Start row. %>

    <div class="col-sm-9">

      <div class="row">
        <div class="col-sm-12 summary-wrapper">
            <span class="summary"><%= @assignment_group.summary %></span>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12 description-wrapper">
          <h2>Overview</h2>
          <div class="description">
              <%= sanitize_text(@assignment_group.description).html_safe %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="assignments">
            <h2>Versions of assignment by class
              <% if can_edit? %>
                <span class="edit-toggle">
                <a href="<%= new_assignment_group_assignment_path @assignment_group %>">
                  <button class="btn btn-sm btn-link" data-toggle="tooltip" title="Add a new class">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                  </button>
                </a>
                </span>
              <% end %>
            </h2>
            <ul>
              <%= render(partial: "assignments/assignment_list_item", 
              collection: sort_by(@assignment_group.assignments, :semester), 
              as: :assignment, 
              locals: {print_header: true, assignment_group: @assignment_group}) || 
              "There are currently no assignments." %>
            </ul>
          </div>
        </div>
      </div>

    </div>

    <div class="col-sm-3">
      <div class="metadata-wrapper">
        <!-- <h2>Metadata</h2> -->
        <div class="metadata">
          <div class="row">
            <div class="col">

              <% if @assignment_group.authors.size <= 1 %>
                <b>Author:</b> 

                <%# No authors (not good!!) %>
                <% if @assignment_group.authors.size == 0 %>
                  No author assigned!

                <%# One author. %>
                <% else %>
                  <span class="author"><%= @assignment_group.authors.first.full_name %></span>
                <% end %>

              <%# Multiple authors. %>
              <% else %>
                <b>Authors:</b>
                <ul class="authors">
                  <% @assignment_group.authors.each do |author| %>
                    <li><span class=\"author\"><%= author.full_name %></span></li>
                  <% end %>
                </ul>
              <% end %>
            </div>
          </div>
            
            <%# Commented out for now. %>
            <% if false %>
                    <div class="row">
                    <div class="col">
                      <b>Learning curve: </b><span class="learning_curve"><%= @assignment_group.learning_curve %></span>
                    </div>
                    </div>
                    <div class="row">
                    <div class="col">
                      <b>Expected instruction hours: </b><span class="instruction_hours"><%= @assignment_group.instruction_hours %></span>
                    </div>
                    </div>
            <% end %>
        </div>
      </div>
    </div>

  </div> <%# End row. %>

  <hr>
  <h2 class="m-1">Materials</h2>
   
  <div class="row"> <%# Start row. %>

    <div class="col-sm-4">
      <div class="web-resources">
        <h3>From the web
          <% if can_edit? %>
            <span class="edit-toggle">
            <a href="<%= vertical_web_resource_index_path @assignment_group %>">
              <button class="btn btn-sm btn-link" data-toggle="tooltip" title="New web resource">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
            </a>
            <!-- got merged into ^^
            <%-# new_vertical_web_resource_path @assignment -%>
            -->
            </span>
          <% end %>
        </h3>
        <ul>
          <%= render(partial: "web_resources/web_resource_list_item", 
          collection: sort_by(@assignment_group.web_resources, :description), 
          as: :web_resource, 
          locals: {print_header: true, vertical: @assignment_group}) || 
          "There are currently no web resources associated with this assignment group." %>
        </ul>
      </div>
    </div>



  </div>
   
  <%# Commented out for now. %>
  <% if false %>
  <hr>
  <div class="related-resources">
    <h2 class="m-1">Related</h2>
    <div class="row"> <%# Start row. %>

      <div class="col-sm-4">
        <%= render(partial: "verticals_shared/related_vertical",
          locals: {title: "Other assignments", 
                  vertical_from: @assignment, 
                  vertical_to: Assignment.new, 
                  data: @assignment.related_assignments,
                  editable: true,
                  title_tag: :h3 }) %>

      <!--     <button class="expand-all-resources">Expand all</button>
      <button class="collapse-all-resources">Collapse all</button> -->
      </div>

      <div class="col-sm-4">
        <%= render(partial: "verticals_shared/related_vertical",
          locals: {title: "Analyses", 
                  vertical_from: @assignment, 
                  vertical_to: Analysis.new, 
                  editable: true,
                  title_tag: :h3  }) %>
      </div>

      <div class="col-sm-4">
        <%= render(partial: "verticals_shared/related_vertical",
          locals: {title: "Software", 
                  vertical_from: @assignment, 
                  vertical_to: Software.new, 
                  editable: true,
                  title_tag: :h3  }) %>
      </div>
    </div> <%# End row. %>
    
    <div class="row"> <%# Start row. %>

      <div class="col-sm-4">
        <%= render(partial: "verticals_shared/related_vertical",
          locals: {title: "Datasets", 
                  vertical_from: @assignment, 
                  vertical_to: Dataset.new, 
                  editable: true,
                  title_tag: :h3 }) %>
      </div>

      <div class="col-sm-4">
        <%= render(partial: "examples/related_examples",
          locals: {title: "Examples", 
                  vertical: @assignment, 
                  editable: true,
                  title_tag: :h3 }) %>
      </div>

    </div> <%# End row. %>
  </div>
  <% end # End commented out code. %>

</div>


