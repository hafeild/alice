
<% if print_header %>
  <h3><span class="name"><%= tag.text %></span>

    <% if can_edit? and defined? vertical %>
      <%= form_for(tag, method: :delete,
          url: vertical_tag_path(vertical, tag), 
          html: {class: "inline"}) do |f| %>
        <button type="submit" class="btn btn-link btn-sm" data-toggle="tooltip" title="Disassociate">
          <span class="glyphicon glyphicon-remove x-btn" aria-hidden="true"></span> 
        </button>
      <% end %>
      <%= form_for(tag, method: :get,
         url: edit_vertical_tag_path(vertical, tag),
         html: {class: "inline"}) do |f| %>
        <button type="submit" class="btn btn-link btn-sm" data-toggle="tooltip" title="Edit">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 
        </button>
      <% end %>
    <% end %>
  </h3>
<% end %>

<%= render(partial: "verticals_shared/related_vertical",
  locals: {title: "Assignments", vertical_from: tag, 
           vertical_to: Assignment.new}) %>

<%= render(partial: "verticals_shared/related_vertical",
  locals: {title: "Analyses", vertical_from: tag, 
           vertical_to: Analysis.new}) %>

<%= render(partial: "verticals_shared/related_vertical",
  locals: {title: "Software", vertical_from: tag, 
           vertical_to: Software.new}) %>

<%= render(partial: "verticals_shared/related_vertical",
  locals: {title: "Datasets", vertical_from: tag, 
           vertical_to: Dataset.new}) %>