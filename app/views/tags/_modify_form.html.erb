<div class="container resource-modification">
  <h1><%= yield :title %></h1>

  <div class="row">
    <div class="col-md-12 col-md-offset-0">
      <%= form_for(@tag, url: action, method: method, 
        html: {class: "vertical-form"}) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        <% unless @vertical.nil? %>
          <%= f.hidden_field @vertical_form_id, name: @vertical_form_id, 
            value: @vertical.id %>
        <% end %>


        <!-- Tags -->
        <div class="form-group">
          <label>Tags</label><span class="required-input">*</span>
          Separate tags with a comma
          <%= f.text_field :text, 
            class: "form-control ignore unchanged",
            placeholder: "e.g., social networking, graphs" %>
        </div>    

        <%= f.submit "Save", id: "form-submit", class: "btn btn-primary" %>

        
        <button class="btn btn-danger link no-submit" 
          data-href="<%= url_for :back %>">Cancel</button>
      <% end %>
    </div>
  </div>
</div>

<% ## This produces connections that can be interacted with via 
   ## javascript + AJAX. 
%>
<% 
if @vertical.tags.exists?(tag.id)
  remove_classes = ""
  add_classes = "hidden"
  status = "added"  
else
  remove_classes = "hidden"
  add_classes = ""
  status = ""
end
%>



<div data-tag-id="<%= tag.id %>" 
    class="tag index-entry <%= status %>">
  <div class="connect-resource" 
      data-url="<%= vertical_tag_path(@vertical, tag) %>">
      
    <button data-action="remove" 
      class="btn btn-sm btn-default remove-connection <%= remove_classes %>"
      >Remove</button>
    <button data-action="add" 
      class="btn btn-sm btn-default add-connection <%= add_classes %>"
      >Add</button>
  </div>

  <span class="entry-data-wrapper">
    <span class="name"><%= 
      link_to tag.text, tag_path(tag) %></span>
  </span>
</div>