
<div class="tag-badge">
  <%= link_to tag.text, tag_path(tag) %> (<%= tag.belongs_to_count%>)
  
  <% if can_edit? and defined? vertical %>
    <span class="edit-toggle">
      <%= link_to(edit_vertical_tag_path(vertical, tag), class: :edit) do 
        %><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span
      ><% end %>
      
      <%= link_to(vertical_tag_path(vertical, tag), method: :delete, class: :delete) do 
        %><span class="glyphicon glyphicon-remove" aria-hidden="true"></span
      ><% end %>
    </span>
  <% end %>
</div>
