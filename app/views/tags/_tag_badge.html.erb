
<div class="tag-badge">
  <%= link_to tag.text, tag_path(tag) %>
  
  <% if can_edit? and defined? vertical %>
    <%= link_to(edit_vertical_tag_path(vertical, tag), class: :edit) do 
      %><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span
    ><% end %>
    
    <%= link_to(edit_vertical_tag_path(vertical, tag), class: :delete, options: {method: :delete}) do 
      %><span class="glyphicon glyphicon-trash" aria-hidden="true"></span
    ><% end %>
  <% end %>
</div>
