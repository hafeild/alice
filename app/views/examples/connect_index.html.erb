<% provide(:title, "Connect examples") %>
<div class="container resource-modification">
  
  <h2>Add a new how-to</h2>
  
  <a href="<%= new_vertical_example_path @vertical %>">
    <button class="btn btn-md btn-default">
      <span>&#43;</span> New how-to
    </button>
  </a>
  
  <h2>Add an existing how-to</h2>
  
  <p>
  Choose examples to associated with 
  <%= link_to @vertical.name, get_vertical_path(@vertical) %>.
  </p>
  <p>
  <a href="<%= get_vertical_path(@vertical) %>"
    ><button class="btn btn-md btn-default">Done</button
  ></a>
  </p>

  <div class="row">
    <div class="col-md-12 col-md-offset-0">
      <% if @examples.empty? %>
        No examples exist yet!
      <% else %>
        <div class="connection-index">
          <%= render partial: 'example_index_item', collection: @examples, 
            as: :example %>
        </div>
      <% end %> 
    </div>
  </div>
  
  <a href="<%= get_vertical_path(@vertical) %>"
    ><button class="btn btn-md btn-default">Done</button
  ></a>
  
</div>
