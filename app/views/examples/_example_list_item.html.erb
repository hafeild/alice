<%# 
This is expecting the following local variables:

  example -- The example to display.
  vertical -- (optional) The vertical whose page this example is being displayed
              on; this is necessary in order for the edit button to be added.
  can_edit -- Whether the edit buttons should be displayed; vertical must also
              be supplied.
%>

<li>
  <span class="example-title"
    ><%= link_to example.title, example_path(example) %></span> 
  
  <% if can_edit? and defined? vertical %>
    <%= form_for(example, method: :delete,
        url: vertical_example_path(vertical, example), 
        html: {class: "inline"}) do |f| %>
      <button type="submit" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 
        Disassociate</button>
    <% end %>
    <%= form_for(example, method: :get,
       url: edit_vertical_example_path(vertical, example),
       html: {class: "inline"}) do |f| %>
      <button type="submit" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
    </button>
    <% end %>
  <% end %>
</li>