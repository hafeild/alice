<% provide(:title, "Example -- #{@example.title}") %>
<div class="container resource-modification">
  <h1><span class="name"><%= @example.title %></span>
    <% if can_edit? %>
      <button type="button" class="btn btn-primary btn-sm edit-toggle enable-editing">
        Enable editing
      </button>
      <button type="button" class="btn btn-primary btn-sm edit-toggle disable-editing">
        Disable editing
      </button>

      <span class="edit-toggle">
        <%= link_to edit_example_path(@example)  do %>
          <button type="button" class="btn btn-default btn-md">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          </button>
        <% end %>
        <%= link_to @example, method: :delete, data: {
            confirm: "Are you sure you want to delete this page?"} do  
          %><button type="button" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> 
          Delete </button
        ><% end %>
      </span>
    <% end %>
  </h1>

  <div class="row">
    <div class="col-md-12 col-md-offset-0">
      <h2>Summary</h2>
      <div class="description">
        <%= @example.summary %>
      </div>
    

      <h2>Details</h2>
      <div class="description">
        <%= sanitize_text(@example.description).html_safe %>
      </div>
      
      <%= render(partial: "attachments/attachment_list",
          locals: { 
            vertical_from: @example, 
            data: @example.attachments,
            editable: true,
            title_tag: :h2 }) %>


      <div class="tags">
        <h2>Tags</h2>
        <% if can_edit? %>
          <span class="edit-toggle">
            <a href="<%= new_vertical_tag_path @example %>"
              ><button class="btn btn-sm btn-default">Add new</button
            ></a>
            <a href="<%= vertical_tag_index_path @example %>"
              ><button class="btn btn-sm btn-default">Add existing</button
            ></a>
          </span>
        <% end %>
        <ul>
          <%= render(partial: "tags/tag_badge", 
            collection: sort_by(@example.tags, :text), as: :tag,
            locals: {print_header: true, vertical: @example}) || 
            "There are currently no tags associated with this example." %>
        </ul>
      </div>
    
      <div class="web-resources">
        <h2>Web resources</h2>
        <% if can_edit? %>
          <span class="edit-toggle">
            <a href="<%= new_vertical_web_resource_path @example %>"
              ><button class="btn btn-sm btn-default">Add new</button
            ></a>
            <a href="<%= vertical_web_resource_index_path @example %>"
              ><button class="btn btn-sm btn-default">Add existing</button
            ></a>
          </span>
        <% end %>
        <ul>
          <%= render(partial: "web_resources/web_resource_list_item", 
            collection: sort_by(@example.web_resources, :description), 
            as: :web_resource,
            locals: {print_header: true, vertical: @example}) || 
            "There are currently no web resources associated with this example." %>
        </ul>
      </div>

      <%= render(partial: "verticals_shared/related_vertical",
        locals: {title: "Demonstrates these analyses", vertical_from: @example, 
                 vertical_to: Analysis.new, editable: true}) %>

      <%= render(partial: "verticals_shared/related_vertical",
        locals: {title: "Demonstrates the following software", vertical_from: @example, 
                 vertical_to: Software.new, editable: true}) %>

      <%= render(partial: "verticals_shared/related_vertical",
        locals: {title: "Uses these datasets", vertical_from: @example, 
                 vertical_to: Dataset.new, editable: true}) %>
     

                 <%= render(partial: "verticals_shared/related_vertical",
                 locals: {title: "Used in these assignments", vertical_from: @example, 
                          vertical_to: Assignment.new, editable: false}) %>
    </div>
  </div>
</div>
