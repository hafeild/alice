<% provide(:title, "New Software Entry") %>
<div class="container">
  <h1>Create a new software entry</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@software) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <div class="form-group">
        <%= f.label :name %><span class="required-input">*</span> 
        (max 200 characters)
        <%= f.text_field :name, class: 'form-control', placeholder: 
          'e.g., NodeXL' %>
      </div>

      <div class="form-group">
        <%= f.label :summary %><span class="required-input">*</span><br/>
        This should be a short overview of the software.
        <%= f.text_area :summary, class: 'form-control', placeholder: 
          'e.g., An Excel plugin that allows you to create and manipulate '+
          'network diagrams.' %>
      </div>

      <div class="form-group">
        <%= f.label :description %><span class="required-input">*</span><br/>
        This should be a detailed description of the software and how to use it.
        <%= f.text_area :description, class: 'form-control', placeholder: 
          '' %>
      </div>

      <%= f.submit "Create entry", class: "btn btn-primary" %>


      <% end %>
    </div>
  </div>


</div>