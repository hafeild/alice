<div data-software-id="<%= software.id %>" class="software index-entry">

  <div class="connect-resource">
    <%= form_for(software, 
        url: vertical_vertical_path(@vertical, software), 
        method: :post, html: {style: 'display: inline'}) do |f| %>
      <% if (@vertical.class == Software and 
              @vertical.software_related_to.exists?(software.id)) or
            (@vertical.class != Software and 
              @vertical.software.exists?(software.id)) %>
        <button class="btn btn-sm btn-default" disabled="disabled">Already added</button>
      <% else %>
        <button class="btn btn-sm btn-default">Add</button>
      <% end %>
    <% end %>
  </div>

  <span class="entry-data-wrapper">
    <span class="name"><%= software.name %></span>
    <span class="snippet"><%= software.summary %></span>
  </span>
</div>