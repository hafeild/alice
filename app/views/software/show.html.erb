<% provide(:title, @software.name) %>
<div class="container">
  <h1><%= @software.name %>
  <% if can_edit? %>
    <a href="<%= edit_software_path(@software.id) %>">
      <button type="button" class="btn btn-default btn-md">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
      </button>
    </a>
  <% end %>
  </h1>

  <h2>Summary</h2>
  <%= @software.summary %><br/>
  

  <h2>Description</h2>
  <%= @software.description %>


</div>
