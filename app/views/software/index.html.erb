<% provide(:title, "Software") %>
<div class="container vertical-index software-index">

  <h1>Software

  <% if can_edit? %>
    <%= link_to(new_software_path) do 
      %><button class="btn btn-sm btn-link" data-toggle="tooltip" title="New Software">
		  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
	  </button>
    <% end %>
  <% end %>
  </h1>
  <div id="software-entries" class="entries">
    <% 
    @i = 0 
    @total = @software.size
    %>
    <%= render @software %>
  </div>

</div>
