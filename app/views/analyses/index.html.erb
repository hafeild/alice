<% provide(:title, "Analyses") %>
<div class="container vertical-index analysis-index">

  <h1>Analyses

  <% if can_edit? %>
    <%= link_to(new_analysis_path) do 
      %>
	  <button class="btn btn-sm btn-link" data-toggle="tooltip" title="New Analysis">
		  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
	  </button>
    <% end %>
  <% end %>
  </h1>
  <div id="analysis-entries" class="entries">
        <% 
        @i = 0 
        @total = @analyses.size
        
        %>
        <%= render @analyses %>
  </div>

</div>
